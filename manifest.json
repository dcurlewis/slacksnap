{
  "manifest_version": 3,
  "name": "SlackSnap",
  "version": "1.0.0",
  "description": "Export Slack messages to markdown files with SlackSnap",
  "permissions": [
    "activeTab",
    "storage",
    "downloads",
    "scripting"
  ],
  "host_permissions": [
    "*://*.slack.com/*"
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.slack.com/*"],
      "js": ["src/config.js", "src/utils.js", "src/content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "SlackSnap - Batch Export",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 